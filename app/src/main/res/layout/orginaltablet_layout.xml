<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_customize"
            android:text="1"
            android:id="@+id/buton1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="2"
            android:id="@+id/buton2"
            android:layout_marginLeft="100dp"
            android:layout_alignTop="@+id/buton1"
            android:layout_alignLeft="@+id/buton1"
            android:layout_alignStart="@+id/buton1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            android:id="@+id/buton3"
            android:layout_marginLeft="100dp"
            android:layout_alignLeft="@+id/buton2"
            android:layout_alignTop="@+id/buton2"
            android:layout_centerHorizontal="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/buton4"

            android:layout_below="@+id/buton1"
            android:layout_alignLeft="@+id/buton1"
            android:layout_alignStart="@+id/buton1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/buton5"
            android:layout_below="@+id/buton2"
            android:layout_alignLeft="@+id/buton2"
            android:layout_alignStart="@+id/buton2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/buton6"
            android:layout_alignBottom="@+id/buton5"
            android:layout_alignLeft="@+id/buton3"
            android:layout_alignStart="@+id/buton3"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/buton7"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/buton4"
            android:layout_alignStart="@+id/buton4"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/buton8"
            android:layout_below="@+id/buton5"
            android:layout_alignLeft="@+id/buton5"
            android:layout_alignStart="@+id/buton5"/>

        <Button
            android:layout_width="80dp"
            android:background="@drawable/button_customize"
            android:layout_height="80dp"
            android:text="9"
            android:id="@+id/buton9"
            android:textSize="13dp"
            android:layout_below="@+id/buton6"
            android:layout_alignLeft="@+id/buton6"
            android:layout_alignStart="@+id/buton6"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/button_customize"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="0"
            android:id="@+id/buton0"
            android:layout_below="@+id/buton8"
            android:layout_alignLeft="@+id/buton8"
            android:layout_alignStart="@+id/buton8"/>

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:id="@+id/butonok"
            android:background="@drawable/enter"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/buton7"
            android:layout_alignStart="@+id/buton7"/>

        <ImageButton
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:id="@+id/butonsil"
            android:background="@android:drawable/ic_delete"
            android:layout_alignTop="@+id/butonok"
            android:layout_alignRight="@+id/buton9"
            android:layout_alignEnd="@+id/buton9"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:background="@drawable/border_layoutnumber"
        android:id="@+id/relativeLayout2">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/relativeLayout3"
        android:layout_marginLeft="80dp"
        android:background="@drawable/kameraborder_layout"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout4">

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout"
        android:id="@+id/relativeLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="İsim Soyisim :"
            android:layout_marginLeft="80dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bölüm :"
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_marginLeft="80dp"
            android:textSize="30dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Departman :"
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:layout_marginLeft="80dp"
            android:textSize="30dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:gravity="center"
            android:id="@+id/onayTextview"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/kartnoID"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lisanStateTxt"
            android:layout_toRightOf="@+id/onayTextview"
            android:layout_alignTop="@+id/textView"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/networkmsgtxtID"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/txtbarty"
        android:layout_below="@+id/relativeLayout4"/>


    <EditText

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editkart"
         android:background="@null"
        android:textCursorDrawable="@android:color/background_dark"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignLeft="@+id/networkmsgtxtID"
        android:layout_alignStart="@+id/networkmsgtxtID"/>



</RelativeLayout>